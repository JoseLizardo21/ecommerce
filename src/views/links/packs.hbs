<script>
    const servicesContainer = document.getElementById('services-container');
    const paginationContainer = document.getElementById('pagination-container');
    const pagination = document.getElementById('pagination');

    const servicesPerPage = 4; // Número de servicios por página
    let servicesTotal = servicesContainer.children.length; // Total de servicios que tienes

    let totalPages = Math.ceil(servicesTotal / servicesPerPage);

    // Función para mostrar los servicios de una página específica
    function showServices(page) {
        const startIndex = (page - 1) * servicesPerPage;
        const endIndex = startIndex + servicesPerPage;

        for (let i = 0; i < servicesContainer.children.length; i++) {
            const service = servicesContainer.children[i];
            service.style.display = (i >= startIndex && i < endIndex) ? 'block' : 'none';
        }
    }

    // Función para generar los enlaces de numeración de las páginas
    function generatePagination() {
        pagination.innerHTML = '';

        for (let i = 1; i <= totalPages; i++) {
            const pageItem = document.createElement('li');
            pageItem.classList.add('page-item');

            const pageLink = document.createElement('a');
            pageLink.classList.add('page-link');
            pageLink.href = '#';
            pageLink.textContent = i;
            pageLink.addEventListener('click', () => showServices(i));

            pageItem.appendChild(pageLink);
            pagination.appendChild(pageItem);
        }
    }

    // Mostrar la primera página al cargar la página
    showServices(1);

    // Generar la paginación
    generatePagination();

    // Función para actualizar la paginación cuando se agregan o eliminan servicios
    function updatePagination() {
        servicesTotal = servicesContainer.children.length;
        totalPages = Math.ceil(servicesTotal / servicesPerPage);

        // Actualizar la paginación
        generatePagination();

        // Mostrar la primera página
        showServices(1);
    }

    // Ejemplo de cómo agregar un nuevo servicio dinámicamente
    function addService() {
        const newService = document.createElement('div');
        newService.classList.add('col');
        newService.innerHTML = `
            <div class="card rounded-0 border-0">
                <!-- Código HTML del nuevo servicio -->
            </div>
        `;

        servicesContainer.appendChild(newService);

        // Actualizar la paginación y mostrar la primera página
        updatePagination();
    }
